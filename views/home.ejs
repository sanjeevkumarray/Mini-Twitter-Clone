<div style="height: 84vh; overflow: scroll">
  <h1 style="margin: 0">This is home page</h1>
  <section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new_post_form" method="POST">
      <textarea
        name="content"
        cols="30"
        rows="3"
        placeholder="Type Here..."
        required
      ></textarea>
      <input type="submit" value="Post" />
    </form>
    <%}%>
    <div id="post_list_container">
      <ul>
        <% for(post of posts){ %> <%- include("_post") -%> <% } %>
      </ul>
    </div>
  </section>
  <% if(locals.user){ %>
  <section id="user_friend">
    <h4>Friends</h4>
    <% for(u of all_users){ %>
    <p>
      <a href="users/profile/<%= u.id %>"><%= u.name %></a>
    </p>
    <%}%>
  </section>
  <%}%>
</div>
